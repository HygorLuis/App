<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/PrimaryColor</item>
    <item name="colorPrimaryDark">@color/SecondaryColor</item>
    <item name="colorAccent">@color/Accent</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
  </style>

  <color name="PrimaryColor">#8B0000</color>
  <color name="SecondaryColor">#FF0000</color>
  <color name="TertiaryColor">#FFFFFF</color>
  <color name="Accent">@color/SecondaryColor</color>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/SecondaryColor</item>
  </style>
</resources>