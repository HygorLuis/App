<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:components="clr-namespace:QueixaAki.Components;assembly=QueixaAki"
             x:Class="QueixaAki.Views.CadastroView"
             Title="Cadastro"
             BackgroundColor="{StaticResource PrimaryColor}">
    <Grid Padding="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollView HorizontalScrollBarVisibility="Default">
            <StackLayout Spacing="3">
                <TableView Intent="Form">
                    <TableRoot>
                        <TableSection Title="Login">
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" 
                                           Grid.Column="0"
                                           Text="Email:" 
                                           VerticalOptions="Center" 
                                           FontSize="Medium"
                                           Margin="12,0,0,-15"/>

                                    <components:BaseEntry Grid.Row="0" 
                                                          Grid.Column="1"
                                                          Text="{Binding Email}" 
                                                          FontSize="Medium" 
                                                          Keyboard="Email"
                                                          TextColor="White"
                                                          HorizontalOptions="FillAndExpand"
                                                          Margin="0,0,0,-15"/>

                                    <BoxView Grid.Row="1"
                                             Grid.Column="1"
                                             HeightRequest="1" 
                                             HorizontalOptions="FillAndExpand" 
                                             BackgroundColor="{StaticResource TertiaryColor}"/>
                                </Grid>
                            </ViewCell>
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" 
                                           Grid.Column="0"
                                           Text="Senha:" 
                                           VerticalOptions="Center" 
                                           FontSize="Medium"
                                           Margin="12,0,0,-15"/>

                                    <components:BaseEntry Grid.Row="0" 
                                                          Grid.Column="1"
                                                          Text="{Binding Senha}" 
                                                          FontSize="Medium" 
                                                          IsPassword="True"
                                                          TextColor="White"
                                                          HorizontalOptions="FillAndExpand"
                                                          Margin="0,0,0,-15"/>

                                    <BoxView Grid.Row="1"
                                             Grid.Column="1"
                                             HeightRequest="1" 
                                             HorizontalOptions="FillAndExpand" 
                                             BackgroundColor="{StaticResource TertiaryColor}"/>
                                </Grid>
                            </ViewCell>
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" 
                                           Grid.Column="0"
                                           Text="Confirmar Senha:" 
                                           VerticalOptions="Center" 
                                           FontSize="Medium"
                                           Margin="12,0,0,-15"/>

                                    <components:BaseEntry Grid.Row="0" 
                                                          Grid.Column="1"
                                                          Text="{Binding ConfirmarSenha}" 
                                                          FontSize="Medium" 
                                                          IsPassword="True"
                                                          TextColor="White"
                                                          HorizontalOptions="FillAndExpand"
                                                          Margin="0,0,0,-15"/>

                                    <BoxView Grid.Row="1"
                                             Grid.Column="1"
                                             HeightRequest="1" 
                                             HorizontalOptions="FillAndExpand" 
                                             BackgroundColor="{StaticResource TertiaryColor}"/>
                                </Grid>
                            </ViewCell>
                        </TableSection>

                        <TableSection Title="Dados Pessoais">
