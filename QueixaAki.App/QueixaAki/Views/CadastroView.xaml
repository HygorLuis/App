                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" 
                                           Grid.Column="0"
                                           Text="CPF:" 
                                           VerticalOptions="Center" 
                                           FontSize="Medium"
                                           Margin="12,0,0,-15"/>

                                    <components:BaseEntry Grid.Row="0" 
                                                          Grid.Column="1"
                                                          Text="{Binding CPF}" 
                                                          Keyboard="Numeric"
                                                          FontSize="Medium" 
                                                          TextColor="White"
                                                          HorizontalOptions="FillAndExpand"
                                                          Margin="0,0,0,-15"/>

                                    <BoxView Grid.Row="1"
                                             Grid.Column="1"
                                             HeightRequest="1" 
                                             HorizontalOptions="FillAndExpand" 
                                             BackgroundColor="{StaticResource TertiaryColor}"/>
                                </Grid>
                            </ViewCell>
                            <ViewCell>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Grid.Row="0" 
                                           Grid.Column="0"
                                           Text="Data de Nascimento:" 
                                           VerticalOptions="Center" 
                                           FontSize="Medium"
                                           Margin="12,0,0,-15"/>

                                    <DatePicker Grid.Row="0" 
                                                Grid.Column="1" 
                                                Date="{Binding DataNascimento}" 
                                                Format="dd/MM/yyy" 
                                                FontSize="Medium"
                                                TextColor="White"
                                                Margin="0,0,0,-15"/>

                                    <BoxView Grid.Row="1"
                                             Grid.Column="1"
                                             HeightRequest="1" 
                                             HorizontalOptions="FillAndExpand" 
                                             BackgroundColor="{StaticResource TertiaryColor}"/>
                                </Grid>

                            </ViewCell>
                        </TableSection>

                        <TableSection Title="Contato">
                            <ViewCell>
